{
  "name": "floorlive-backend",
  "version": "1.0.0",
  "description": "Backend for FloorLive - Swiss Unihockey tracker",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "dev:host": "HOST=0.0.0.0 nodemon --exec tsx src/index.ts",
    "build": "tsc && cp -r data dist/ && cp -r ../shared dist/",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup-image-processor": "cd ../scripts && npm install",
    "process-images": "cd ../scripts && npm run process",
    "process-images:teams": "cd ../scripts && npm run process-teams",
    "process-images:players": "cd ../scripts && npm run process-players",
    "process-images:clean": "cd ../scripts && npm run clean",
    "process-images:force": "cd ../scripts && node image-processor.js --force",
    "process-images:help": "cd ../scripts && node image-processor.js --help",
    "crawl-entities": "cd ../scripts && node entity-crawler.js",
    "crawl-entities:dry-run": "cd ../scripts && node entity-crawler.js --dry-run",
    "crawl-entities:force": "cd ../scripts && node entity-crawler.js --force"
  },
  "keywords": [
    "unihockey",
    "sports",
    "live",
    "tracker"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "fs-extra": "^11.3.2",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@types/node-fetch": "^2.6.13",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
