<IfModule mod_rewrite.c>
  RewriteEngine On

  # ðŸš« Never rewrite /api requests
  RewriteCond %{REQUEST_URI} ^/api($|/)
  RewriteRule ^ - [L]

  # ðŸš« Never rewrite static assets (optional, safer)
  RewriteCond %{REQUEST_URI} \.(png|jpe?g|gif|svg|css|js|ico|webp|woff2?|ttf|eot)$ [NC]
  RewriteRule ^ - [L]

  # If file or directory exists, serve it
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise, serve index.html
  RewriteRule ^ index.html [L]
</IfModule>