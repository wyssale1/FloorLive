<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # If a file or directory exists, serve it directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise, send everything to index.html
  RewriteRule ^ index.html [L]
</IfModule>