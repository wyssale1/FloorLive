---
interface Props {
  game: {
    id: number;
    homeTeam: string;
    awayTeam: string;
    homeLogo: string;
    awayLogo: string;
    league: string;
    homeScore?: number;
    awayScore?: number;
    startTime?: string;
    date?: string;
    period?: string;
    timeRemaining?: string;
  };
  type: "live" | "upcoming" | "recent";
  showBorder?: boolean;
}

const { game, type, showBorder = true } = Astro.props;

const hoverClasses = type === "live" 
  ? "hover:bg-primary/10" 
  : type === "upcoming" 
    ? "hover:bg-muted/50" 
    : "hover:bg-muted/40";
---

<a href={`/games/${game.id}`}>
  <div class={`flex items-center py-3 px-4 hover:bg-background/50 transition-all duration-200 cursor-pointer ${hoverClasses}`}>
    <div class="flex items-center space-x-3 flex-1 min-w-0">
      <div class="text-center min-w-[40px]">
        {type === "live" || type === "recent" ? (
          <div>
            <div class={`text-sm font-bold ${type === "recent" ? "text-muted-foreground font-medium" : "text-primary"}`}>
              {game.homeScore}
            </div>
            <div class={`text-sm font-bold ${type === "recent" ? "text-muted-foreground font-medium" : "text-primary"}`}>
              {game.awayScore}
            </div>
          </div>
        ) : (
          <div class="text-xs text-muted-foreground flex items-center">
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12,6 12,12 16,14"></polyline>
            </svg>
            {game.startTime}
          </div>
        )}
      </div>

      <div class="flex-1 min-w-0">
        <div class="flex items-center space-x-2 mb-1">
          <img src={game.homeLogo || "/placeholder.svg"} alt="" class="w-5 h-5 rounded-full shrink-0" />
          <span class={`text-sm truncate ${type === "recent" ? "font-normal text-muted-foreground" : "font-medium"}`}>
            {game.homeTeam}
          </span>
        </div>
        <div class="flex items-center space-x-2">
          <img src={game.awayLogo || "/placeholder.svg"} alt="" class="w-5 h-5 rounded-full shrink-0" />
          <span class={`text-sm truncate ${type === "recent" ? "font-normal text-muted-foreground" : "font-medium"}`}>
            {game.awayTeam}
          </span>
        </div>
      </div>
    </div>

    <div class="text-right ml-3 shrink-0">
      {type === "live" && (
        <div>
          <div class="text-xs text-muted-foreground">{game.timeRemaining}</div>
          <div class="text-xs text-muted-foreground">{game.period}</div>
        </div>
      )}
      {type === "upcoming" && (
        <span class="inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium border border-gray-200 text-gray-700 h-5">
          {game.league}
        </span>
      )}
      {type === "recent" && (
        <div class="text-xs text-muted-foreground flex items-center">
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          {game.date}
        </div>
      )}
    </div>
  </div>
</a>