import BaseLayout from '../layouts/BaseLayout.astro';
import { DashboardControls } from '../components/react/DashboardControls.tsx';

// Mock data for demonstration - matching v9
const liveGames = [
  {
    id: 1,
    homeTeam: "ZSC Lions",
    awayTeam: "HC Davos",
    homeScore: 2,
    awayScore: 1,
    period: "2nd Period",
    timeRemaining: "12:34",
    league: "NLA",
    homeLogo: "/zsc-lions-logo.png",
