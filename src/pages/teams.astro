---

<BaseLayout title="Teams - Unihockey Live Tracker">
  <div class="min-h-screen bg-background">
    <Header />

    <main class="container mx-auto px-4 py-6 space-y-8">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-foreground">Teams</h1>
        <div class="flex items-center space-x-2">
          <span class="text-sm text-muted-foreground">Season 2023/24</span>
        </div>
      </div>

      <!-- NLA Teams -->
      <section>
        <div class="flex items-center space-x-2 mb-4">
          <h2 class="text-xl font-semibold text-foreground">National League A (NLA)</h2>
          <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-primary/10 text-primary">
            {nlaTeams.length} teams
          </span>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {nlaTeams.map((team) => (
            <a href={`/teams/${team.id}`} class="group">
              <div class="bg-card rounded-lg border p-6 hover:shadow-md transition-all duration-200 group-hover:border-primary/50">
                <div class="flex items-center space-x-4 mb-4">
                  <img src={team.logo || "/placeholder.svg"} alt={team.name} class="w-12 h-12 rounded-full" />
                  <div class="flex-1 min-w-0">
                    <h3 class="font-semibold text-foreground truncate group-hover:text-primary transition-colors">
                      {team.name}
                    </h3>
                    <p class="text-sm text-muted-foreground">{team.league}</p>
                  </div>
                </div>
                
                <div class="grid grid-cols-3 gap-4 text-center">
                  <div>
                    <div class="text-2xl font-bold text-primary">{team.points}</div>
                    <div class="text-xs text-muted-foreground">Points</div>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-foreground">{team.wins}</div>
                    <div class="text-xs text-muted-foreground">Wins</div>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-muted-foreground">{team.goalsFor}:{team.goalsAgainst}</div>
                    <div class="text-xs text-muted-foreground">Goals</div>
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- NLB Teams -->
      <section>
        <div class="flex items-center space-x-2 mb-4">
          <h2 class="text-xl font-semibold text-foreground">National League B (NLB)</h2>
          <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-secondary/10 text-secondary">
            {nlbTeams.length} teams
          </span>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {nlbTeams.map((team) => (
            <a href={`/teams/${team.id}`} class="group">
              <div class="bg-card rounded-lg border p-6 hover:shadow-md transition-all duration-200 group-hover:border-primary/50">
                <div class="flex items-center space-x-4 mb-4">
                  <img src={team.logo || "/placeholder.svg"} alt={team.name} class="w-12 h-12 rounded-full" />
